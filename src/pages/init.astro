---
import Layout from '../layouts/Layout.astro';
---

<Layout title="初始化管理员账户">
  <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white rounded-lg shadow p-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          创建管理员账户
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          首次使用需要创建管理员账户
        </p>
      </div>
      
      <form id="initForm" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="username" class="sr-only">用户名</label>
            <input
              id="username"
              name="username"
              type="text"
              required
              class="appearance-none rounded-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
              placeholder="用户名"
            />
          </div>
          <div>
            <label for="email" class="sr-only">邮箱</label>
            <input
              id="email"
              name="email"
              type="email"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
              placeholder="邮箱地址"
            />
          </div>
          <div>
            <label for="password" class="sr-only">密码</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              minlength="6"
              class="appearance-none rounded-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
              placeholder="密码 (至少6位)"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            id="submitBtn"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            创建管理员
          </button>
        </div>
      </form>

      <div id="resultMessage" class="hidden"></div>
    </div>
  </div>

  <script>
    const initForm = document.getElementById('initForm') as HTMLFormElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const resultMessage = document.getElementById('resultMessage') as HTMLDivElement;

    initForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      submitBtn.disabled = true;
      submitBtn.textContent = '创建中...';

      const formData = new FormData(initForm);
      const username = formData.get('username') as string;
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;

      try {
        // 使用 Supabase Auth 注册
        const response = await fetch('/auth/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ username, email, password, role: 'admin' }),
        });

        const data = await response.json();

        if (data.success) {
          resultMessage.className = 'mt-4 p-4 bg-green-50 border border-green-200 rounded-lg';
          resultMessage.innerHTML = `
            <p class="text-green-800 font-medium">✅ 管理员账户创建成功！</p>
            <p class="text-green-700 mt-2">用户名: ${username}</p>
            <p class="text-green-700">邮箱: ${email}</p>
            <a href="/admin" class="mt-3 inline-block text-primary-600 hover:text-primary-700 font-medium">
              前往登录页面 →
            </a>
          `;
          initForm.classList.add('hidden');
        } else {
          throw new Error(data.error || '创建失败');
        }
      } catch (error: any) {
        resultMessage.className = 'mt-4 p-4 bg-red-50 border border-red-200 rounded-lg';
        resultMessage.innerHTML = `
          <p class="text-red-800">❌ ${error.message || '创建失败，请稍后重试'}</p>
        `;
        submitBtn.disabled = false;
        submitBtn.textContent = '创建管理员';
      }
      
      resultMessage.classList.remove('hidden');
    });
  </script>
</Layout>
